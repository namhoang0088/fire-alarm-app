<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg_temp_control"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_windows"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_windows_gray"
        android:drawableRight="@drawable/baseline_cancel_24"
        android:paddingLeft="50dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="Kiểm soát nhiệt độ"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/temp_picture"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/cool_icon"
                android:orientation="vertical"
                android:padding="16dp" />

            <TextView
                android:id="@+id/status_temp_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="19"
                android:gravity="center"
                android:textSize="50dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <SeekBar
                android:id="@+id/seekBar_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="40"
                android:progress="19"
                android:layout_margin="16dp"
                android:thumb="@drawable/power_seekbar"
                android:progressDrawable="@drawable/custtom_seekbar_temp"
                android:splitTrack="false"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_windows_white"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên thông số:"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhiệt độ"
                        android:textSize="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thang đo:"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="°C"
                        android:textSize="20dp"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>